
@* Generator: MvcHelper GeneratePrettyNames: true*@

@using MVC5.Common.Controller.Alerts

@*for using razor generator after creating htmlhlper and run Enable-RazorGenerator 
     you should change build action of generated class to complie *@

@helper ShowBootstrapAlerts(Bootstrap bootstrap)
{
   
    if (bootstrap==null)
    {
        return;
    }

    foreach (var message in bootstrap.BootstrapMessages)
    {
        var dismissableClass = message.Dismissable ? "alert-dismissable" : null;
        <div class="alert alert-@message.AlertType @dismissableClass">
            @if (message.Dismissable)
            {
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            }
            @message.Message
        </div>
    }
}


