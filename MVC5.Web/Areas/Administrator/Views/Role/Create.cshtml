@model MVC5.ViewModel.AdminArea.Role.AddRoleViewModel
@{
    ViewBag.Title = "درج گروه کاربری کاربری";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm(MVC.Administrator.Role.ActionNames.Create, MVC.Administrator.Role.Name, new { area =MVC.Administrator.Name }, FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>مشخصات گروه</strong>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-2">
                                @Html.CheckBoxFor(m => m.IsActive, new { @class = "checkbox-inline" })
                                @Html.LabelFor(m => m.IsActive, new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.CheckBoxFor(m => m.IsDefaultForRegister, new { @class = "checkbox-inline" })
                                @Html.LabelFor(m => m.IsDefaultForRegister, new { @class = "control-label" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>دسترسی ها</strong>
                </div>
                <div class="panel-body" >
                    <div class="row">
                            @foreach (var permission in (IEnumerable<SelectListItem>)ViewBag.Permissions)
                            {
                                <text>
                                    <div class="col-md-4">
                                        <input type="checkbox" id="@permission.Value" name="PermissionIds" value="@permission.Value" class="checkbox-inline" />
                                        <label for="@permission.Value" class="control-label">@permission.Text</label>
                                    </div>
                                </text>
                            }
                        </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success btn-sm btn-block" value="ثبت اطلاعات" />
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>